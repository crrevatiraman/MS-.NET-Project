@model List<PizzaBuy.Models.Domain.Product>

@{
}
@await Html.PartialAsync("NavPartialView")

<div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

<div class="bg-secondary bg-opacity-10 py-2" style="background: linear-gradient(to right, #D14545, #FFD045">
    <div class="container">
            <h1>Nonveg</h1>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        @foreach (var product in Model)
        {
           if(product.Type == "Nonveg" && product.ProductAvailable == true)
            {
                <div class="col-md-6 mb-4">
                    <div class="card" style="width: 100%;">
                        <img src="@product.ProductImage" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h6>Product Name:</h6>
                            <h5 class="card-title">@product.ProductName</h5>
                            <hr />
                            <h6>Product Description:</h6>
                            <p class="card-text">@product.ProductDescription</p>
                            <h6>Product Price:</h6>
                            <p class="card-text">@product.ProductPrice</p>
                            <h6>Product Type:</h6>
                            <p class="card-text">@product.Type</p>

                            <a class="btn btn-primary" asp-area="" asp-controller="AdminProduct" asp-action="Edit" asp-route-id="@product.Id" style="background: linear-gradient(to right, #D14545, #FFD045);">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
</div>
